{
  "name": "securezip",
  "displayName": "SecureZip",
  "description": "Securely export your project as a clean ZIP.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:securezip.export",
    "onStartupFinished",
    "onView:securezip.view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "securezip.export",
        "title": "SecureZip: Export Project"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "securezip.view",
          "name": "SecureZip"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "securezip.view",
        "contents": "プロジェクトを安全にZIP化します。\\n[エクスポートを実行](command:securezip.export)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "securezip.export",
          "when": "view == securezip.view",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "SecureZip",
      "properties": {
        "secureZip.commitMessageTemplate": {
          "type": "string",
          "default": "[SecureZip] エクスポート用の自動コミット: ${date} ${time} (ブランチ: ${branch}, タグ: ${tag})",
          "description": "自動コミット時のメッセージテンプレート。利用可能変数: ${date}, ${time}, ${datetime}, ${branch}, ${tag}"
        },
        "secureZip.tagPrefix": {
          "type": "string",
          "default": "export",
          "description": "自動作成するタグの接頭辞（例: export → export-YYYYMMDD-HHmmss）"
        },
        "secureZip.additionalExcludes": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "追加で除外したいglobパターン（.gitignoreは自動適用）"
        },
        "secureZip.includeNodeModules": {
          "type": "boolean",
          "default": false,
          "description": "node_modules を含めるか（既定では除外）"
        }
      }
    }
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "globby": "^14.0.2",
    "simple-git": "^3.27.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
